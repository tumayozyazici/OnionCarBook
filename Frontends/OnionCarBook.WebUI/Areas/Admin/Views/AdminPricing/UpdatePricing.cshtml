@model UpdatePricingDto
@{
    ViewData["Title"] = "UpdatePricing";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ödeme Türü Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Ödeme türü ile ilgili değişikliği aşağıdaki kutucuğa girebilirsiniz. Veri girişinden sonra güncelle butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="PricingID" />
                            <div class="form-group">
                                <label for="exampleInputName">Periyot Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Ödeme türünün ismini giriniz.">
                            </div>                            
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Türünü Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
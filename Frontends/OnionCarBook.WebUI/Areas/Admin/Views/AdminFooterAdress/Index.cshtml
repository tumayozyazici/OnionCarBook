@model List<ResultFooterAdressDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">İletişim ve Footer Alanı</h4>
                        <p class="card-subtitle mb-4">
                            İletişim ve footer bilgilerini ait işlemleri bu sayfadan gerçekleştirebilirsiniz.Harita bilgisini lokasyon değeri olarak Google Map üzerinden alabilirsiniz.Tasarımda bozulma olmaması adına yeni bir adres girişi yaptıktan sonra önceki banner alanını silin, sadece bir adet adres verisi kalmalıdır.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Adres</th>
                                        <th>Telefon</th>
                                        <th>E-Mail</th>
                                        <th>Açıklama</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Adress</td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@item.Email</td>
                                            <td>@item.Description</td>
                                            <td><a href="/Admin/AdminFooterAdress/RemoveFooterAdress/@item.FooterAdressID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminFooterAdress/UpdateFooterAdress/@item.FooterAdressID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                    }
                                </tbody>
                            </table>
                            <div style="margin-top:10px">
                                    <a href="/Admin/AdminFooterAdress/CreateFooterAdress" class="btn btn-outline-primary">Yeni İletişim ve Footer Girişi</a>
                                @if (Model.Count == 0)
                                {
                                        <span style="color:red; margin-left:10px;"> İletişim ve Footer Bulunamadı</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
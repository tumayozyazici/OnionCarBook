@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans Bilgisi Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Referansa ait veri girişlerini buradan yapabilir ve güncelleyebilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="testimonialID" />
                            <div class="form-group">
                                <label for="exampleInputName">Referans Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="name" placeholder="Referans adını ve soyadını giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referans Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Referans unvanını giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">Referans Görsel URL'i</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="imageUrl" placeholder="Görsel URL'i giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputComment">Yorum</label>
                                <textarea rows="5" style="resize:none" class="form-control" id="exampleInputComment" asp-for="comment" placeholder="Yorum giriniz."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Bilgisi Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Sosyal medya hesaplarınıza ait veri girişlerini buradan yapabilir ve güncelleyebilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <div class="form-group">
                                <label for="exampleInputName">Sosyal Medya Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Sosyal medya adını giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">Sosyal Medya URL'i</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Sosyal medya URL'i giriniz.">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconUrl">Icon URL'i</label>
                                <input type="text" class="form-control" id="exampleInputIconUrl" asp-for="Icon" placeholder="İkon Url'i giriniz.">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

